    <Label style="-fx-text-fill: WHITE;" text="Enter Admin password:" />
    <TextField fx:id="adminPass" maxWidth="200" prefHeight="26.0" style="-fx-background-color: #8c8886; -fx-text-fill: WHITE;" />
    <Button onAction="#checkPass" style="-fx-background-color: #454342; -fx-text-fill: WHITE;" text="Enter" />
    <Button onAction="#generatePass" style="-fx-background-color: #454342; -fx-text-fill: WHITE;" text="Generate admin password" />
